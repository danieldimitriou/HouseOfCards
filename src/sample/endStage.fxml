<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.EndStageController">
   <children>
      <Label fx:id="resultLabel">
         <font>
            <Font name="System Bold" size="35.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" top="50.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="result" prefHeight="18.0" prefWidth="161.0" text="Play Again?">
         <VBox.margin>
            <Insets bottom="50.0" left="50.0" />
         </VBox.margin>
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <VBox alignment="CENTER">
         <children>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#playAgainButton" text="Yes">
               <opaqueInsets>
                  <Insets left="120.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets right="75.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#quit" text="No">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="75.0" top="-26.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="150.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
